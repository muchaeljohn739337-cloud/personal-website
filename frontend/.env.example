# ============================================
# ADVANCIA PAYLEDGER - Frontend Environment Configuration
# ============================================
# Copy this file to .env.local and update with real values

# ============================================
# API CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"

# ============================================
# CRON JOB CONFIGURATION
# ============================================
CRON_SECRET="your-secure-random-cron-secret-here"

# ============================================
# SENTRY ERROR TRACKING
# ============================================
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn-here"

# ============================================
# SITE CONFIGURATION
# ============================================
SITE_URL="https://your-app.vercel.app"

# ============================================
# FEATURES & CURRENCIES
# ============================================
NEXT_PUBLIC_CURRENCY_LIST="USD,EUR,BTC,ETH,USDT,TRUMP,MEDBED"
NEXT_PUBLIC_FEATURE_FLAGS="notifications,bonus_tokens,debit_card,crypto_recovery"

# ============================================
# STRIPE (PUBLIC KEYS ONLY)
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# ============================================
# WEB PUSH NOTIFICATIONS
# ============================================
NEXT_PUBLIC_VAPID_KEY="your-vapid-public-key"

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================
NEXT_PUBLIC_BOTPRESS_BOT_ID="your-botpress-bot-id"
NEXT_PUBLIC_API_KEY="your-public-api-key"

# ============================================
# ADMIN & AUTHENTICATION
# ============================================
NEXT_PUBLIC_ADMIN_KEY="supersecureadminkey123"

# ============================================
# ANALYTICS & MONITORING
# ============================================
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_SENTRY_DSN=""

# ============================================
# DEVELOPMENT & DEBUGGING
# ============================================
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# ============================================
# ETHEREUM (PUBLIC SETTINGS ONLY)
# ============================================
NEXT_PUBLIC_ETHEREUM_NETWORK="mainnet"
NEXT_PUBLIC_ETHEREUM_CHAIN_ID="1"