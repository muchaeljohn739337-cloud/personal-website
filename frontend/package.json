  "repository": {
    "type": "git",
    "url": "https://github.com/muchaeljohn739337-cloud/modular-saas-platform.git"
  },
  "scripts": {
    "dev": "next dev -H 127.0.0.1 -p 3000",
    "dev:3001": "next dev -H 127.0.0.1 -p 3001",
    "dev:open": "next dev -p 3000 --turbo",
    "build": "next build --no-lint",
    "start": "next start",
    "start:standalone": "cross-env HOSTNAME=127.0.0.1 PORT=3000 node .next/standalone/server.js",
    "test": "echo \"✅ Frontend tests passed (placeholder)\" && exit 0",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:report": "npx playwright show-report",
    "lint": "next lint",
    "clean": "npx kill-port 3000 && npm run dev",
    "export": "next export",
    "deploy:vercel": "vercel --prod",
    "deploy:check": "vercel --prod --dry-run"
  },
