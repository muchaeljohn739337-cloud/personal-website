# ============ NODE ENVIRONMENT ============
NODE_ENV=production

# ============ BACKEND ============
PORT=4000
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_chars

# Database connection (PostgreSQL on Render or local)
DATABASE_URL=postgresql://advancia_user:password@advancia-db.render.com/advancia_db

# Email service (Gmail SMTP for OTP authentication)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM="Advancia Pay Ledger <noreply@advancia.com>"
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# CORS whitelist (comma-separated origins)
ALLOWED_ORIGINS=https://advancia-frontend.onrender.com,https://advanciapayledger.com,http://localhost:3000

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# VAPID Keys for Web Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ============ FRONTEND ============

# API URL (automatically injected by Render from backend service)
NEXT_PUBLIC_API_URL=https://advancia-backend.onrender.com
NEXT_PUBLIC_SOCKET_URL=https://advancia-backend.onrender.com

# App branding
NEXT_PUBLIC_APP_NAME=Advancia Pay Ledger
NEXT_PUBLIC_COMPANY_TAGLINE=Smart. Secure. Financial Freedom.

# NextAuth (for authentication)
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_chars
NEXTAUTH_URL=https://advancia-frontend.onrender.com

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# Stripe Public Key (frontend)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# ============ SECURITY / MISC ============

# Admin default credentials (CHANGE IN PRODUCTION!)
ADMIN_EMAIL=admin@advancia.com
ADMIN_PASSWORD=ChangeThisSecurePassword123!

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=your_session_secret_minimum_32_chars
SESSION_MAX_AGE=86400000

# ============ DEPLOYMENT AUTOMATION ============

# Render API (for automated deployments)
RENDER_API_KEY=your_render_api_key

# Cloudflare (for DNS automation)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email notifications (for deployment alerts)
NOTIFICATION_EMAIL=devops@advancia.com
