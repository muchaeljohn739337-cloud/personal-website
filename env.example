# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
APP_NAME=Personal Website
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
PORT=3000
API_PORT=4000

# ============================================
# DATABASE - PostgreSQL
# ============================================
DATABASE_URL=postgresql://devuser:devpassword@localhost:5432/appdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=appdb

# ============================================
# REDIS - Cache & Sessions
# ============================================
REDIS_URL=redis://:devredispass@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=devredispass

# ============================================
# MONGODB - Logs & Analytics
# ============================================
MONGODB_URL=mongodb://devuser:devpassword@localhost:27017/appdb
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=devuser
MONGODB_PASSWORD=devpassword
MONGODB_DB=appdb

# ============================================
# OBJECT STORAGE - MinIO/S3
# ============================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=uploads
S3_REGION=us-east-1
S3_USE_SSL=false

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Session
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================
# OAUTH PROVIDERS
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=Personal Website

# ============================================
# STRIPE BILLING
# ============================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:3000/billing/success
STRIPE_CANCEL_URL=http://localhost:3000/billing/cancel

# ============================================
# AI/ML SERVICES
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# PostHog (Product Analytics)
POSTHOG_API_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# QUEUE & WORKERS
# ============================================
QUEUE_REDIS_URL=redis://:devredispass@localhost:6379
WORKER_CONCURRENCY=5
QUEUE_PREFIX=app

# ============================================
# WEBSOCKET
# ============================================
WS_PORT=4001
WS_PATH=/socket.io

# ============================================
# CDN & ASSETS
# ============================================
CDN_URL=http://localhost:9000
ASSETS_URL=http://localhost:3000

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_REGISTRATION=true
ENABLE_OAUTH=true
ENABLE_2FA=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=false

# ============================================
# DEVELOPMENT TOOLS
# ============================================
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_API_DOCS=true
ENABLE_DEBUG=true
