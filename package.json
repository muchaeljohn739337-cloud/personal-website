{
  "name": "modular-saas-platform",
  "version": "1.0.0",
  "description": "Modular SaaS Platform with Next.js Frontend and Express Backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "launch": "node launch.js",
    "start": "node launch.js",
    "dev": "node launch.js",
    "guardian": "cd backend && node src/ai/ai_orchestrator.js",
    "setup": "npm run setup:backend && npm run setup:frontend && npm run setup:db",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",
    "setup:db": "cd backend && npx prisma migrate deploy && npx prisma generate",
    "seed:admin": "cd backend && node scripts/create-admin.js",
    "import:users": "cd backend && node scripts/import-users.js",
    "health": "curl http://localhost:4000/api/health && curl http://localhost:3000/api/healthcheck",
    "status": "curl http://localhost/status",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs --lines 50",
    "monit": "pm2 monit",
    "prisma:generate": "cd backend && prisma generate",
    "prisma:migrate:dev": "cd backend && prisma migrate dev --name init",
    "prisma:migrate:deploy": "cd backend && prisma migrate deploy",
    "prisma:db:push": "cd backend && prisma db push",
    "deploy": "bash ./scripts/deploy.sh",
    "backup": "bash ./scripts/backup_db.sh",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:watch": "npm run test:watch:backend -- --watch",
    "test:watch:backend": "cd backend && npm run test:watch",
    "test:watch:frontend": "cd frontend && npm test -- --watch",
    "test:cov": "npm run test:cov:backend && npm run test:cov:frontend",
    "test:cov:backend": "cd backend && npm run test:coverage",
    "test:cov:frontend": "cd frontend && npm test -- --coverage",
    "test:e2e": "npm run test:e2e:backend && npm run test:e2e:frontend",
    "test:e2e:backend": "cd backend && npm run test:e2e",
    "test:e2e:frontend": "cd frontend && npm run test:e2e",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:backend:fix && npm run lint:frontend:fix",
    "lint:backend:fix": "cd backend && npm run lint:fix",
    "lint:frontend:fix": "cd frontend && npm run lint:fix"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "saas",
    "nextjs",
    "express",
    "prisma",
    "docker"
  ],
  "author": "mucha",
  "license": "PRIVATE",
  "repository": {
    "type": "git",
    "url": "https://github.com/muchaeljohn739337-cloud/modular-saas-platform.git"
  },
  "devDependencies": {
    "sharp": "^0.34.4",
    "wrangler": "^4.52.1"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "d3": "^7.9.0",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "typeorm": "^0.3.28",
    "ws": "^8.18.3"
  }
}
