# Test Environment Configuration
NODE_ENV=test
PORT=4001  # Different port to avoid conflicts
HOST=0.0.0.0
API_PREFIX=/api
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/modular_saas_test
DATABASE_SSL=false
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5

# Authentication
JWT_SECRET=test-secret-key-for-testing-only-please-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=1d
PASSWORD_SALT_ROUNDS=1  # Lower for faster tests

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis (using mock in tests)
REDIS_URL=redis://localhost:6379
REDIS_TTL=60  # Shorter TTL for tests
REDIS_PREFIX=modular-saas-test:

# Rate Limiting (disabled in tests)
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX=1000  # High limit for tests

# Testing flags
TEST_MODE=true
ENABLE_RATE_LIMITING=false
ENABLE_REQUEST_LOGGING=false

# Disable external services in tests
STRIPE_SECRET_KEY=sk_test_mock
EMAIL_ENABLED=false
SMS_ENABLED=false
SENTRY_DSN=

# Session
SESSION_SECRET=test-session-secret

# Logging
LOG_LEVEL=error  # Only show errors in test output

# Security
HELMET_ENABLED=false  # Disable security headers in tests
