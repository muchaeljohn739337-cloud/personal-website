# AI Core Configuration
AI_ENABLED=true
AI_PROVIDER=openai  # openai or anthropic

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Redis Configuration (for Task Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AI Settings
AI_AUTO_APPROVE=false  # Set to true to auto-approve low-risk tasks
AI_MAX_RETRIES=3
AI_TASK_TIMEOUT=300000  # 5 minutes in milliseconds
AI_CONCURRENT_TASKS=5

# Monitoring Settings
AI_MONITORING_ENABLED=true
AI_ALERT_THRESHOLD_ERROR=10
AI_ALERT_THRESHOLD_PERFORMANCE=30000  # 30 seconds
AI_HEALTH_CHECK_INTERVAL=60000  # 1 minute

# Email Configuration (if not already set)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com

# Report Configuration
AI_REPORT_RECIPIENTS=admin@yourdomain.com
AI_DAILY_REPORT_TIME=08:00
AI_WEEKLY_REPORT_DAY=1  # Monday
AI_MONTHLY_REPORT_DAY=1  # 1st of month
