    "src/ai/surveillanceAI.ts",
    "src/ai/copilot/FeedbackLearner.ts",
    "src/ai/prisma/prismaSolverCore.ts",
    "src/routes/vault.ts",
    "src/routes/EXAMPLE_OAL_INTEGRATION.ts",
    "src/routes/adminSecurityManagement.ts",
