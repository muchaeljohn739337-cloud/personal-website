# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
API_PREFIX=/api
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/modular_saas_dev
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Authentication
JWT_SECRET=your_development_jwt_secret_should_be_long_and_secure
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d
PASSWORD_SALT_ROUNDS=10

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600
REDIS_PREFIX=modular-saas-dev:

# Sentry (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Debug
DEBUG=true
