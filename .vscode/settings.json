{
  // CRITICAL: Remove secrets from workspace settings
  // "secrets.passphrase": "Good_mother1!?", // MOVED TO USER SETTINGS FOR SECURITY

  // CSS/Styling
  "css.lint.unknownAtRules": "ignore",

  // General Editor Settings
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // TypeScript/JavaScript Settings
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.preferences.preferTypeOnlyAutoImports": true,

  // File Associations
  "files.associations": {
    "*.env*": "dotenv",
    "docker-compose*.yml": "dockercompose",
    "Dockerfile*": "dockerfile",
    "*.prisma": "prisma"
  },

  // Git Settings
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // GitLens Settings - Deployment Drift Filter
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false
  },
  "gitlens.views.commits.files.layout": "tree",
  "gitlens.views.repositories.files.layout": "tree",

  // GitLens Filter Presets for Deployment Tracking
  "gitlens.views.commits.filters.preset": {
    "deployment-drift": {
      "name": "üöÄ Deployment Drift (Render/Cloudflare)",
      "description": "Show commits that changed deployment workflows, configs, and startup scripts (excludes Vercel)",
      "filters": {
        "branches": {
          "include": ["main", "deploy/*", "ci/*"]
        },
        "paths": {
          "include": [
            ".github/workflows/**",
            "render.yaml",
            "render.*.yaml",
            "wrangler.toml",
            "docker-compose.yml",
            "Dockerfile",
            "**/Dockerfile*",
            "scripts/deploy*.sh",
            "scripts/deploy*.ps1",
            "scripts/start*.sh",
            "scripts/start*.ps1",
            "**/deploy*.sh",
            "**/deploy*.ps1",
            "backend/Procfile",
            "backend/package.json",
            "frontend/package.json",
            ".env.example",
            "**/.env.example",
            "backend/prisma/schema.prisma",
            "backend/src/index.ts",
            "backend/src/app.ts",
            "frontend/next.config.js",
            "frontend/middleware.ts"
          ],
          "exclude": [
            "**/*vercel*",
            "**/*Vercel*",
            "**/vercel.json",
            "VERCEL*.md",
            "**/node_modules/**",
            "**/dist/**",
            "**/.next/**"
          ]
        },
        "authors": {
          "include": [],
          "exclude": []
        }
      }
    },
    "render-only": {
      "name": "üéØ Render Only",
      "description": "Isolate Render-specific deployments and configurations",
      "filters": {
        "paths": {
          "include": [
            "render.yaml",
            "render.*.yaml",
            ".github/workflows/deploy-render*.yml",
            ".github/workflows/*render*.yml",
            "backend/Procfile",
            "RENDER*.md",
            "**/*RENDER*.md"
          ],
          "exclude": ["**/node_modules/**"]
        }
      }
    },
    "cloudflare-only": {
      "name": "‚òÅÔ∏è Cloudflare Only",
      "description": "Isolate Cloudflare Workers/Pages deployments",
      "filters": {
        "paths": {
          "include": [
            "wrangler.toml",
            "wrangler*.toml",
            ".github/workflows/*cloudflare*.yml",
            "CLOUDFLARE*.md",
            "**/*CLOUDFLARE*.md"
          ],
          "exclude": ["**/node_modules/**"]
        }
      }
    },
    "ci-workflows": {
      "name": "‚öôÔ∏è CI/CD Workflows",
      "description": "All GitHub Actions workflow changes",
      "filters": {
        "paths": {
          "include": [".github/workflows/**"],
          "exclude": ["**/*vercel*"]
        }
      }
    }
  },

  // Testing Settings
  "jest.autoEnable": false,
  "jest.disabledWorkspaceFolders": ["Advancia Pay Ledger (Root)", "Frontend"],
  "jest.rootPath": "backend",
  "playwright.showTrace": true,

  // ESLint Settings
  "eslint.workingDirectories": ["backend", "frontend"],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Search Settings
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/coverage": true,
    "**/backups": true,
    "**/.venv": true
  },

  // Security
  "security.workspace.trust.untrustedFiles": "open",

  // YAML: map GitHub Actions schema to workflows and reduce false positives
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },

  // ==========================================
  // AI AGENT & COPILOT CONFIGURATION
  // ==========================================

  // GitHub Copilot Settings
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "typescript": true,
    "javascript": true,
    "prisma": true
  },
  "github.copilot.advanced": {
    "debug.overrideEngine": "gpt-4",
    "debug.testOverrideProxyUrl": "",
    "debug.filterLogCategories": []
  },
  "github.copilot.chat.localeOverride": "auto",
  "github.copilot.inlineSuggest.enable": true,

  // AI-Powered Code Analysis
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info", "hint"],
  "errorLens.followCursor": "activeLine",
  "errorLens.messageTemplate": "$message - $source",

  // REST Client for AI API Testing
  "rest-client.environmentVariables": {
    "$shared": {
      "apiUrl": "http://localhost:4000"
    },
    "local": {
      "apiUrl": "http://localhost:4000"
    },
    "production": {
      "apiUrl": "https://api.advanciapayledger.com"
    }
  },
  "rest-client.previewResponseInUntitledDocument": true,
  "rest-client.defaultHeaders": {
    "Content-Type": "application/json"
  },

  // Prisma Language Server
  "prisma.fileWatcher": true,
  "prisma.trace.server": "messages",

  // AI Agent Development Snippets
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "editor.suggestSelection": "first",
  "editor.parameterHints.enabled": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,

  // Code Intelligence for AI Workers
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "all",

  // AI Task & TODO Management
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "BUG",
    "HACK",
    "NOTE",
    "AI:",
    "AGENT:",
    "RAG:",
    "LLM:",
    "OPTIMIZE:"
  ],
  "todo-tree.highlights.customHighlight": {
    "AI:": {
      "icon": "hubot",
      "foreground": "#00BFFF",
      "iconColour": "#00BFFF"
    },
    "AGENT": {
      "icon": "ü§ñ",
      "foreground": "#0000FF",
      "iconColour": "#0000FF"
    },
    "RAG:": {
      "icon": "database",
      "foreground": "#9370DB",
      "iconColour": "#9370DB"
    },
    "LLM": {
      "icon": "üß†",
      "foreground": "#800080",
      "iconColour": "#800080"
    },
    "OPTIMIZE:": {
      "icon": "zap",
      "foreground": "#32CD32",
      "iconColour": "#32CD32"
    }
  },

  // AI Agent Workspace Organization
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/.turbo": true,
    "**/coverage": true
  },

  // AI Model File Watching (ChromaDB, embeddings)
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/data/chromadb/**": true,
    "**/backups/**": true
  },

  // AI-Optimized Terminal
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.env.windows": {
    "NODE_ENV": "development"
  },

  // Better Comments for AI Agent Documentation
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "AI:",
      "color": "#00BFFF",
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "AGENT:",
      "color": "#FFD700",
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    }
  ],

  // Path Intellisense for AI Agent Imports
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/frontend/src",
    "~": "${workspaceFolder}/backend/src"
  },

  // Import Cost Analysis for AI Dependencies
  "importCost.largePackageColor": "#d44e40",
  "importCost.mediumPackageColor": "#d8a024",
  "importCost.smallPackageColor": "#6cc24a",
  "importCost.typescriptExtensions": ["\\.tsx?$"],
  "importCost.javascriptExtensions": ["\\.jsx?$"],

  // Markdown for AI Documentation
  "markdown.preview.fontSize": 14,
  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.print.absoluteImgPath": false,

  // Code Spell Checker (ignore AI/tech terms)
  "cSpell.words": [
    "advancia",
    "chromadb",
    "copilot",
    "openai",
    "langchain",
    "pinecone",
    "vectorstore",
    "embeddings",
    "ioredis",
    "prisma",
    "socketio",
    "totp",
    "vapid",
    "ethers",
    "hardhat",
    "solidity",
    "cryptocurrency",
    "blockchain",
    "metamask",
    "wagmi",
    "viem",
    "trpc"
  ],
  "editor.aiStats.enabled": true
}
